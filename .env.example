# PostgreSQL Configuration
POSTGRES_DB=nakama
POSTGRES_USER=nakama
POSTGRES_PASSWORD=nakama_password

# Nakama Configuration
NAKAMA_CONSOLE_USERNAME=admin
NAKAMA_CONSOLE_PASSWORD=password
NAKAMA_SERVER_KEY=defaultkey

# Nakama Ports
NAKAMA_HTTP_PORT=7350
NAKAMA_GRPC_PORT=7349
NAKAMA_CONSOLE_PORT=7351

# Mobile Client Configuration
EXPO_PUBLIC_NAKAMA_HOST=localhost
EXPO_PUBLIC_NAKAMA_PORT=7350
EXPO_PUBLIC_NAKAMA_USE_SSL=false
EXPO_PUBLIC_SERVER_KEY=defaultkey

# Game Configuration
MAX_TURN_TIME_SECONDS=30
MATCHMAKING_TIMEOUT_SECONDS=60
RECONNECTION_TIMEOUT_SECONDS=300

# Leaderboard Configuration
LEADERBOARD_MAX_ENTRIES=100
INITIAL_ELO_RATING=1500

# Security
JWT_SECRET=your-jwt-secret-here-change-in-production
RATE_LIMIT_MOVES_PER_MINUTE=30
RATE_LIMIT_MATCHMAKING_PER_HOUR=20

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Production URLs (for deployment)
PRODUCTION_NAKAMA_HOST=your-nakama-domain.com
PRODUCTION_DATABASE_URL=postgres://username:password@your-rds-endpoint:5432/nakama
PRODUCTION_FRONTEND_URL=https://your-frontend-domain.com
PRODUCTION_MOBILE_API_URL=https://your-nakama-domain.com
